<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prema_cleanup_plan_tree" model="ir.ui.view">
        <field name="name">prema.cleanup.plan.tree</field>
        <field name="model">prema.cleanup.plan</field>
        <field name="arch" type="xml">
            <list>
                <field name="name"/>
                <field name="status"/>
                <field name="risk_score"/>
                <field name="generated_by_ai"/>
            </list>
        </field>
    </record>

    <record id="view_prema_cleanup_plan_form" model="ir.ui.view">
        <field name="name">prema.cleanup.plan.form</field>
        <field name="model">prema.cleanup.plan</field>
        <field name="arch" type="xml">
            <form string="Cleanup Plan">
                <sheet>
                    <header>
                        <button name="approve_stage" type="object" string="Approve Stage 1" context="{'stage_number': 1}" invisible="status != 'draft'" class="btn-primary"/>
                        <button name="approve_stage" type="object" string="Approve Stage 2" context="{'stage_number': 2}" invisible="status != 'stage_1'"/>
                        <button name="execute_plan" type="object" string="Execute Plan" invisible="status != 'stage_2'"/>
                        <field name="status" widget="statusbar" statusbar_visible="draft,stage_1,stage_2,executing,completed"/>
                    </header>

                    <div class="oe_title">
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>

                    <group col="2">
                        <field name="generated_by_ai"/>
                        <field name="risk_score" readonly="1"/>
                    </group>

                    <notebook>
                        <page string="Summary">
                            <field name="summary"/>
                        </page>
                        <page string="Steps">
                            <field name="step_ids">
                                <tree editable="bottom">
                                    <field name="sequence" width="60"/>
                                    <field name="action_type"/>
                                    <field name="model_name"/>
                                    <field name="record_id"/>
                                    <field name="severity"/>
                                    <field name="approved"/>
                                    <field name="executed"/>
                                </tree>
                            </field>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
