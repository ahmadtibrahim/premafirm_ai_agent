<odoo>
    <record id="view_premafirm_load_stop_tree" model="ir.ui.view">
        <field name="name">premafirm.load.stop.tree</field>
        <field name="model">premafirm.load.stop</field>
        <field name="arch" type="xml">
            <list editable="bottom">
                <field name="sequence"/>
                <field name="is_pickup"/>
                <field name="address"/>
                <field name="latitude"/>
                <field name="longitude"/>
                <field name="stop_pickup_dt"/>
                <field name="stop_delivery_dt"/>
                <field name="pallet_count"/>
                <field name="load_weight_lbs"/>
                <field name="service_type"/>
                <field name="load_type"/>
                <field name="notes"/>
            </list>
        </field>
    </record>

    <record id="view_premafirm_load_stop_form" model="ir.ui.view">
        <field name="name">premafirm.load.stop.form</field>
        <field name="model">premafirm.load.stop</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <group>
                            <field name="lead_id"/>
                            <field name="sequence"/>
                            <field name="is_pickup"/>
                            <field name="address"/>
                            <field name="latitude"/>
                            <field name="longitude"/>
                        </group>
                        <group>
                            <field name="stop_pickup_dt"/>
                            <field name="stop_delivery_dt"/>
                            <field name="pallet_count"/>
                            <field name="load_weight_lbs"/>
                            <field name="service_type"/>
                            <field name="load_type"/>
                        </group>
                    </group>
                    <field name="notes"/>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_crm_lead_form_premafirm_stops" model="ir.ui.view">
        <field name="name">crm.lead.form.premafirm.stops</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Multi Stops">
                    <field name="stop_ids" context="{'default_lead_id': id}">
                        <list editable="bottom">
                            <field name="sequence"/>
                            <field name="is_pickup"/>
                            <field name="address"/>
                            <field name="stop_pickup_dt"/>
                            <field name="stop_delivery_dt"/>
                            <field name="pallet_count"/>
                            <field name="load_weight_lbs"/>
                            <field name="service_type"/>
                            <field name="load_type"/>
                        </list>
                        <form>
                            <group>
                                <group>
                                    <field name="sequence"/>
                                    <field name="is_pickup"/>
                                    <field name="address"/>
                                    <field name="latitude"/>
                                    <field name="longitude"/>
                                    <field name="notes"/>
                                </group>
                                <group>
                                    <field name="stop_pickup_dt"/>
                                    <field name="stop_delivery_dt"/>
                                    <field name="pallet_count"/>
                                    <field name="load_weight_lbs"/>
                                    <field name="service_type"/>
                                    <field name="load_type"/>
                                </group>
                            </group>
                        </form>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
