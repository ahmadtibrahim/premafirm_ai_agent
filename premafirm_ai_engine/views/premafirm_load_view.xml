<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_premafirm_load_tree" model="ir.ui.view">
        <field name="name">premafirm.load.tree</field>
        <field name="model">premafirm.load</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="sale_order_id"/>
                <field name="vehicle_id"/>
                <field name="driver_id"/>
                <field name="billing_mode"/>
                <field name="total_distance_km"/>
            </tree>
        </field>
    </record>

    <record id="view_premafirm_load_form" model="ir.ui.view">
        <field name="name">premafirm.load.form</field>
        <field name="model">premafirm.load</field>
        <field name="arch" type="xml">
            <form>
                <header>
                    <button name="action_generate_pod" type="object" string="Generate POD" class="btn-primary"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="sale_order_id"/>
                            <field name="vehicle_id"/>
                            <field name="driver_id" readonly="1"/>
                        </group>
                        <group>
                            <field name="route_reference"/>
                            <field name="bol_number"/>
                            <field name="seal_number"/>
                            <field name="billing_mode" readonly="1"/>
                        </group>
                    </group>
                    <group string="Signatures">
                        <field name="pickup_signature" widget="image"/>
                        <field name="delivery_signature" widget="image"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
