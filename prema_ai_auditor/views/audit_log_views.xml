<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prema_audit_log_tree" model="ir.ui.view">
        <field name="name">prema.audit.log.tree</field>
        <field name="model">prema.audit.log</field>
        <field name="arch" type="xml">
            <list>
                <field name="rule_name"/>
                <field name="severity"/>
                <field name="model_name"/>
                <field name="record_id"/>
                <field name="status"/>
                <field name="approved_by"/>
                <field name="approved_at"/>
            </list>
        </field>
    </record>

    <record id="view_prema_audit_log_form" model="ir.ui.view">
        <field name="name">prema.audit.log.form</field>
        <field name="model">prema.audit.log</field>
        <field name="arch" type="xml">
            <form string="Audit Log">
                <sheet>
                    <header>
                        <field name="status" widget="statusbar" statusbar_visible="open,approved,resolved,rejected"/>
                    </header>

                    <div class="oe_title">
                        <h1>
                            <field name="rule_name"/>
                        </h1>
                    </div>

                    <group col="2">
                        <field name="severity"/>
                        <field name="model_name"/>
                        <field name="record_id"/>
                    </group>

                    <group>
                        <field name="explanation"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
