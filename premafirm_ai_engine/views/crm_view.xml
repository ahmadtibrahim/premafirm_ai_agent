<odoo>
    <record id="view_crm_lead_form_premafirm" model="ir.ui.view">
        <field name="name">crm.lead.form.premafirm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">
            <!-- Keep inheritance resilient: only anchor to stable notebook node in base CRM form. -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Dispatch Summary">
                    <group>
                        <group>
                            <field name="x_studio_assigned_vehicle" readonly="1"/>
                            <field name="x_studio_distance_km" readonly="1"/>
                            <field name="x_studio_drive_hours" readonly="1"/>
                            <field name="x_studio_estimated_cost" readonly="1"/>
                            <field name="x_studio_target_profit" readonly="1"/>
                            <field name="x_studio_suggested_rate" readonly="1"/>
                        </group>
                        <group>
                            <field name="x_studio_service_type" readonly="1"/>
                            <field name="x_studio_load_type" readonly="1"/>
                            <field name="x_studio_total_pickup_dt" readonly="1"/>
                            <field name="x_studio_total_delivery_dt" readonly="1"/>
                            <field name="x_studio_aggregated_pallet_count" readonly="1"/>
                            <field name="x_studio_aggregated_load_weight_lbs" readonly="1"/>
                        </group>
                        <field name="x_studio_ai_recommendation" readonly="1"/>
                    </group>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
