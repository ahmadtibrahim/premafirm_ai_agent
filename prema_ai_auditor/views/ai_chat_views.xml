<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_prema_ai_dashboard_form" model="ir.ui.view">
        <field name="name">prema.ai.dashboard.form</field>
        <field name="model">prema.ai.dashboard</field>
        <field name="arch" type="xml">
            <form string="AI Auditor">
                <sheet>
                    <div class="oe_title">
                        <h1>AI Auditor</h1>
                    </div>
                    <group>
                        <field name="health_score" widget="progressbar" readonly="1"/>
                    </group>
                    <notebook>
                        <page string="AI Chat">
                            <div class="o_prema_ai_chat_root"/>
                        </page>
                        <page string="Incidents">
                            <field name="incident_ids" context="{'default_generated_by_ai': True}"/>
                        </page>
                        <page string="Schema Browser">
                            <button string="Open Schema Viewer"
                                    type="object"
                                    name="action_open_schema_viewer"
                                    class="btn-primary"/>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
</odoo>
