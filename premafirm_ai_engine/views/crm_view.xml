<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_crm_lead_form_premafirm" model="ir.ui.view">
        <field name="name">crm.lead.form.premafirm</field>
        <field name="model">crm.lead</field>
        <field name="inherit_id" ref="crm.crm_lead_view_form"/>
        <field name="arch" type="xml">

            <!-- AI Price Button -->
            <xpath expr="//button[@name='action_set_won_rainbowman']" position="after">
                <button name="action_premafirm_ai_price"
                        string="AI Price"
                        type="object"
                        class="btn btn-primary"/>
            </xpath>

            <!-- Multi Stops Tab -->
            <xpath expr="//sheet/notebook" position="inside">
                <page string="Multi Stops">
                    <field name="stop_ids">
                        <tree editable="bottom">
                            <field name="sequence"/>
                            <field name="stop_type"/>
                            <field name="address"/>
                            <field name="pallets"/>
                            <field name="weight_lbs"/>
                            <field name="x_studio_pickup_dt"/>
                            <field name="x_studio_delivery_dt"/>
                        </tree>
                    </field>
                </page>
            </xpath>

        </field>
    </record>

</odoo>
